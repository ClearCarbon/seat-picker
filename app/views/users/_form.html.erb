<%= form_for (@user) do |f| %>

  <div class='form-group'><%= f.label :email %><br />
    <%= f.email_field :email, :autofocus => true,
      :class => 'form-control', :placeholder => 'Enter Email' %></div>

  <div class='form-group'><%= f.label :username %><br />
    <%= f.text_field :username, 
      :class => 'form-control',
      :placeholder => 'Enter Username' %></div>

  <div><%= f.submit "Update", :class => 'btn btn-primary'  %></div>
<% end %>
