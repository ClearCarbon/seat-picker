%h1 Editing user
= render 'users/form'
.buffer-top
  - if(current_user.id != @user.id)
    - if(@user.admin?)
      = form_for @user, :url => demote_from_admin_user_path(@user), :method => "post" do |f|
        %div= f.submit "Demote From Admin", :class => 'btn btn-primary'
    - else
      = form_for @user, :url => promote_to_admin_user_path(@user), :method => "post" do |f|
        %div= f.submit "Promote To Admin", :class => 'btn btn-primary'
