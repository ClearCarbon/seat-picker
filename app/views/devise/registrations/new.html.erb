<h2>HoG Account - Sign up</h2>
<p>You are signing up for a HoG account that will be used throughout future HoG events.</p>

<%= form_for(resource, :as => resource_name, 
             :url => registration_path(resource_name), 
             :html => {:role => 'form'}) do |f| %>
  <%= devise_error_messages! %>
  <%= hidden_field_tag :key, params[:key] %>

  <div class='form-group'><%= f.label :email %><br />
    <%= f.email_field :email, :autofocus => true,
      :class => 'form-control',
      :placeholder => 'Enter email' %></div>

  <div class='form-group'><%= f.label :password %><br />
  <%= f.password_field :password,
      :class => 'form-control',
      :placeholder => 'Enter password' %></div>

  <div class='form-group'><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation,
      :class => 'form-control',
      :placeholder => 'Confirm password' %></div>

  <div><%= f.submit "Sign up", :class => 'btn btn-default' %></div>
<% end %>

<hr class='divider'>
<%= render "devise/shared/links" %>
