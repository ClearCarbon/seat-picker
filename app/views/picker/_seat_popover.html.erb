<% if seat.user && seat.user == current_user %>
  <%= link_to_function 'Give up this seat', "give_up_seat(#{seat.id})", class: 'btn btn-primary' %>
<% elsif seat.user %>
  <%= link_to_function 'Request this seat', "request_seat(#{seat.id})", class: 'btn btn-primary' %>
<% else %>
  <%= link_to_function 'Pick this seat', "pick_seat(#{seat.id})", class: 'btn btn-primary' %>
<% end %>
