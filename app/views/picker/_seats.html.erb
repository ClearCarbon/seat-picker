<div class='seatpicker-seats<%= align.to_s %>'>
  <% seats.each do |seat| %>
    <div class='seatpicker-seat<%= align.to_s + selected_class(seat) %>' onclick='pick_seat(<%= seat.id %>)' data-toggle='tooltip' title='<%= seat.user.try(:email)  %>'>
      <span><%= seat.row + seat.number.to_s %></span>
    </div>
  <% end %>
</div>
