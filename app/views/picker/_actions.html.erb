<div>
  <div class='well' id='seatpicker-management'>
    <h4>Seat Management</h4>

    <ul class="nav nav-pills nav-stacked">
      <% if current_user.seat %>
        <li>
        <%= link_to 'Give up my seat', '#', onclick: "give_up_seat();" %>
        </li>
      <% elsif !current_user.seat %>
        <li>
          You currently have no seat.
        </li>
      <% end %>
    </ul>

    <% if current_user.seat_requests.any? %>
      <div id='my-seat-requests'>
        Your have requested the following <%= 'seat'.pluralize(current_user.seat_requests.count) %>:
        <%= current_user.seat_requests.collect{|seat_request| seat_request.seat.decorate.name }.to_sentence %>
      </div>
    <% end %>

    <% if current_user.seat && current_user.seat.seat_requests.any? %>
      <div id='seat-requests'>
        <ul class='nav nav-pills nav-stacked'>
          <% current_user.seat.seat_requests.each do |seat_request| %>
            <li>
            <%= link_to "Give my seat to #{seat_request.user.email}", '#', onclick: "donate_seat(#{seat_request.id});" %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
  </div>
</div>
