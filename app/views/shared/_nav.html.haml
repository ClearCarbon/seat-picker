.navbar.navbar-default.navbar-static-top
  .container
    %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", :type => "button"}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{:href => "/"} Seat Picker
    .nav-collapse.navbar-responsive-collapse.pull-right
      %ul.nav.navbar-nav
        - if !user_signed_in?
          %li
            = link_to root_path(key: params[:key]) do
              = fa_icon 'home'
              Home
        - if user_signed_in?
          %li
            = link_to "/" do
              = fa_icon 'th'
              Picker
          - if admin?
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                = fa_icon 'chevron-down'
                Admin
              %ul.dropdown-menu
                %li
                  = link_to admin_users_path do
                    = fa_icon 'users'
                    Users
                %li
                  = link_to admin_events_path do
                    = fa_icon 'birthday-cake'
                    Events
                %li
                  = link_to admin_seats_path do
                    = fa_icon 'th'
                    Seats
        = render 'devise/menu/registration_items'
        = render 'devise/menu/login_items'
